<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home Page</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap"
      rel="stylesheet"
    />
    <style>
      body {
        background: linear-gradient(135deg, #74ebd5 0%, #acb6e5 100%);
        min-height: 100vh;
        margin: 0;
        font-family: "Roboto", sans-serif;
        display: flex;
        flex-direction: column;
        align-items: center;
      }
      .main-heading {
        margin-top: 2.5rem;
        font-size: 2.5rem;
        font-weight: 700;
        color: #333;
        letter-spacing: 1px;
        text-align: center;
        text-shadow: 0 2px 8px rgba(172, 182, 229, 0.15);
      }
      .container {
        background: #fff;
        margin-top: 2rem;
        padding: 2.5rem 2rem;
        border-radius: 16px;
        box-shadow: 0 4px 24px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 420px;
        display: flex;
        flex-direction: column;
        align-items: center;
      }
      form {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        width: 100%;
      }
      label {
        font-size: 1rem;
        color: #555;
        margin-bottom: 0.25rem;
      }
      input[type="text"] {
        padding: 0.7rem 1rem;
        border: 1px solid #ccc;
        border-radius: 8px;
        font-size: 1rem;
        outline: none;
        transition: border 0.2s;
      }
      input[type="text"]:focus {
        border-color: #74ebd5;
      }
      button {
        background: linear-gradient(90deg, #74ebd5 0%, #acb6e5 100%);
        color: #fff;
        border: none;
        border-radius: 8px;
        padding: 0.8rem 0;
        font-size: 1.1rem;
        font-weight: 700;
        cursor: pointer;
        transition: background 0.2s;
      }
      button:hover {
        background: linear-gradient(90deg, #acb6e5 0%, #74ebd5 100%);
      }
      .url-generated {
        margin-top: 1rem;
        background: #e3f6fc;
        color: #222;
        padding: 0.8rem 1rem;
        border-radius: 8px;
        font-size: 1rem;
        text-align: center;
        word-break: break-all;
        box-shadow: 0 2px 8px rgba(116, 235, 213, 0.1);
      }
      .table-container {
        margin-top: 2.5rem;
        width: 100%;
        max-width: 700px;
        background: #fff;
        border-radius: 16px;
        box-shadow: 0 4px 24px rgba(0, 0, 0, 0.1);
        padding: 2rem 1.5rem;
      }
      table {
        width: 100%;
        border-collapse: collapse;
        font-size: 1rem;
      }
      th,
      td {
        padding: 0.75rem 1rem;
        text-align: left;
      }
      th {
        background: #f5f7fa;
        color: #333;
        font-weight: 700;
      }
      tr:nth-child(even) {
        background: #f9fbfd;
      }
      tr:hover {
        background: #e3f6fc;
      }
      a {
        color: #4f8cff;
        text-decoration: none;
        font-weight: 500;
      }
      a:hover {
        text-decoration: underline;
      }
      @media (max-width: 800px) {
        .table-container {
          padding: 1rem 0.2rem;
        }
        table,
        th,
        td {
          font-size: 0.95rem;
        }
      }
    </style>
  </head>
  <body>
    <div class="main-heading">URL Shortner</div>
    <% if (locals.Id) { %>
    <div class="url-generated">
      URL Generated:
      <a href="http://localhost:8001/url/<%= Id %>" target="_blank"
        >http://localhost:8001/url/<%= Id %></a
      >
    </div>
    <% } %>
    <div class="container">
      <form method="post" action="/url">
        <label>Enter Your Original URL:</label>
        <input
          type="text"
          name="url"
          placeholder="https://example.com"
          required
        />
        <button type="submit">Generate</button>
      </form>
    </div>
    <div class="table-container">
      <% if (locals.urls) { %>
      <table>
        <thead>
          <tr>
            <th>S.No</th>
            <th>ShortID</th>
            <th>Redirect</th>
            <th>Clicks</th>
          </tr>
        </thead>
        <tbody>
          <% urls.forEach((url, index) => { %>
          <tr>
            <td><%= index + 1 %></td>
            <td>
              <a href="/url/<%= url.shortId %>" target="_blank">
                <%= url.shortId %>
              </a>
            </td>
            <td><%= url.redirectURL %></td>
            <td><%= url.visitHistory.length %></td>
          </tr>
          <% }) %>
        </tbody>
      </table>
      <% } else { %>
      <p style="text-align: center; color: #888">No URLs found.</p>
      <% } %>
    </div>
  </body>
</html>
